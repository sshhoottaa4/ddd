    <script>
        const tooltipTitleCallback = (tooltipItems) => {
            const item = tooltipItems[0];
            let label = item.chart.data.labels[item.dataIndex];
            if (Array.isArray(label)) {
                return label.join(' ');
            }
            return label;
        };
        
        const commonChartOptions = {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                legend: {
                    position: 'bottom',
                    labels: {
                        padding: 20,
                        font: { size: 12, family: "'Noto Sans JP', sans-serif" }
                    }
                },
                tooltip: {
                    callbacks: { title: tooltipTitleCallback },
                    bodyFont: { family: "'Noto Sans JP', sans-serif" },
                    titleFont: { family: "'Noto Sans JP', sans-serif" }
                }
            }
        };

        const wrapLabel = (label, maxLength = 10) => {
            if (label.length <= maxLength) return label;
            const lines = [];
            let currentLine = '';
            for (let i = 0; i < label.length; i++) {
                currentLine += label[i];
                if (currentLine.length >= maxLength) {
                    lines.push(currentLine);
                    currentLine = '';
                }
            }
            if (currentLine) lines.push(currentLine);
            return lines;
        };
        
        const radarCtx = document.getElementById('seriousnessRadarChart').getContext('2d');
        const radarLabels = ['家族で来店', '熱心な質問', 'メモを取る', '長時間滞在', '具体的要望', '写真撮影'];
        new Chart(radarCtx, {
            type: 'radar',
            data: {
                labels: radarLabels,
                datasets: [{
                    label: '本気度HIGH',
                    data: [5, 5, 4, 4, 5, 4],
                    backgroundColor: 'rgba(255, 107, 107, 0.2)',
                    borderColor: '#FF6B6B',
                    pointBackgroundColor: '#FF6B6B',
                }, {
                    label: '本気度LOW',
                    data: [1, 2, 1, 1, 2, 1],
                    backgroundColor: 'rgba(69, 183, 209, 0.2)',
                    borderColor: '#45B7D1',
                    pointBackgroundColor: '#45B7D1',
                }]
            },
            options: {
                ...commonChartOptions,
                scales: {
                    r: {
                        angleLines: { color: '#e9ecef' },
                        grid: { color: '#e9ecef' },
                        pointLabels: { font: { size: 13, family: "'Noto Sans JP', sans-serif" } },
                        ticks: { display: false, stepSize: 1 },
                        suggestedMin: 0,
                        suggestedMax: 5
                    }
                }
            }
        });

        const highDoughnutCtx = document.getElementById('highDoughnutChart').getContext('2d');
        new Chart(highDoughnutCtx, {
            type: 'doughnut',
            data: {
                labels: ['家族全員で来店', '熱心な質問', 'メモ・写真撮影', '長時間滞在'],
                datasets: [{
                    data: [35, 30, 20, 15],
                    backgroundColor: ['#FF6B6B', '#FFD166', '#06D6A0', '#118AB2'],
                }]
            },
            options: {...commonChartOptions, cutout: '60%'}
        });

        const lowDoughnutCtx = document.getElementById('lowDoughnutChart').getContext('2d');
        new Chart(lowDoughnutCtx, {
            type: 'doughnut',
            data: {
                labels: ['一人で来店', '連絡先を教えない', wrapLabel('短時間・立ち話'), '目が泳ぐ・スマホ'],
                datasets: [{
                    data: [40, 25, 20, 15],
                    backgroundColor: ['#45B7D1', '#9DB2BF', '#526D82', '#B0C4DE'],
                }]
            },
            options: {...commonChartOptions, cutout: '60%'}
        });
        
        const followUpBarCtx = document.getElementById('followUpBarChart').getContext('2d');
        new Chart(followUpBarCtx, {
            type: 'bar',
            data: {
                labels: ['本気度LOW', '本気度MIDDLE', '本気度HIGH'],
                datasets: [{
                    label: '推奨フォロー頻度 (回/月)',
                    data: [1, 2, 4],
                    backgroundColor: ['#45B7D1', '#FED766', '#FF6B6B'],
                    borderColor: '#ffffff',
                    borderWidth: 2,
                    borderRadius: 5,
                    barPercentage: 0.6,
                    categoryPercentage: 0.7
                }]
            },
            options: {
                ...commonChartOptions,
                indexAxis: 'y',
                 scales: {
                    x: { beginAtZero: true, ticks: { stepSize: 1 } },
                    y: { grid: { display: false } }
                },
                plugins: { legend: { display: false } }
            }
        });
    </script>
